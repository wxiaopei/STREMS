<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="5dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <TextView
        android:id="@+id/sampling_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Sampling Time"/>

    <TextView
        android:id="@+id/sensor_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="skin temprature"
        android:layout_below="@+id/sampling_time" />

    <TextView
        android:id="@+id/sensor_bp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/sensor_temp"
        tools:text="blood pressure" />

</RelativeLayout>

</android.support.v7.widget.CardView>