<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wayne.edu.last.strems.NewCaseActivity">


    <EditText
        android:id="@+id/ambulance_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:hint="ALS or BLS"
        android:maxLines="1" />


    <EditText
    android:id="@+id/patient_First"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Patient First Name"
    android:maxLines="1"
    android:layout_below="@+id/ambulance_type"
    android:layout_alignLeft="@+id/ambulance_type"
    android:layout_alignStart="@+id/ambulance_type" />

    <EditText
        android:id="@+id/patient_Last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Last Name"
        android:maxLines="1"
        android:layout_below="@+id/patient_First"
        android:layout_alignLeft="@+id/patient_First"
        android:layout_alignStart="@+id/patient_First" />

    <EditText
        android:id="@+id/residual_mins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Residual Mins"
        android:maxLines="1"
        android:layout_below="@+id/patient_Last"
        android:layout_alignLeft="@+id/patient_Last"
        android:layout_alignStart="@+id/patient_Last" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_navigation_check_24"/>

</RelativeLayout>
